<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMash"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/background"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/imgShak"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/background"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/imgMush"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/background"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/imgAfif"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/background"
                android:scaleType="centerCrop" />


            <ImageView
                android:id="@+id/imgLit"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/background"
                android:scaleType="centerCrop" />


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/initialdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#004D40"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/rhsbg"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/playername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="Player Name"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playertype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="Player Type"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/playerdes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="Player Description"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_margin="7dp"
                    android:text="Description"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>